<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>showStudent</servlet-name>
        <servlet-class>controller.showController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showStudent</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateOrAddStudent</servlet-name>
        <servlet-class>controller.addFormController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateOrAddStudent</servlet-name>
        <url-pattern>/new</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addStudent</servlet-name>
        <servlet-class>controller.addController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addStudent</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateForm</servlet-name>
        <servlet-class>controller.updateFormController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateForm</servlet-name>
        <url-pattern>/updateFrom</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateStudent</servlet-name>
        <servlet-class>controller.updateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateStudent</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
         
    <servlet>
        <servlet-name>deleteStudent</servlet-name>
        <servlet-class>controller.deleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteStudent</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

</web-app>
